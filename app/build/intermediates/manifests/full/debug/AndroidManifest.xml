<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.headway.app.how_to_do_it"
    android:versionCode="4"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <category android:name="android.intent.category.LAUNCHER" />

        <activity
            android:name="ie.headway.app.how_to_do_it.SplashScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ie.headway.app.how_to_do_it.TaskSelectionActivity"
            android:label="@string/app_name" />
        <activity
            android:name="ie.headway.app.how_to_do_it.TaskActivity"
            android:label="@string/app_name" />

        <service android:name="ie.headway.app.how_to_do_it.audio.TaskAudioPlayer" />
    </application>

</manifest>