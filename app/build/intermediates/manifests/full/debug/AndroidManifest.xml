<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.headway.app.howtodoit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <category android:name="android.intent.category.LAUNCHER" />

        <activity
            android:name="ie.headway.app.howtodoit.SplashScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="ie.headway.app.howtodoit.TaskSelectionActivity"
            android:label="@string/app_name" />
        <activity
            android:name="ie.headway.app.howtodoit.TaskBreakdownActivity"
            android:label="@string/app_name" />

        <service android:name="ie.headway.app.howtodoit.audio.TaskAudioPlayer" />
    </application>

</manifest>